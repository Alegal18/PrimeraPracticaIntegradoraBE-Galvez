<div id="connection">
        <h1>Lista Productos</h1>

        <form id="product-form">
            <input type="text" id="name" name="name" placeholder="Product name" />
            <input type="number" id="price" name="price" placeholder="Product price" />
            <button type="submit" id="add-product">Agregar</button>
            <button type="submit" id="remove-product">Eliminar</button>
        </form>
        <ul id="products">
            {{#each products}}
                <li>{{this.title}} - {{this.description}} - {{this.price}}</li>
            {{/each}}
        </ul>
</div>


<script src="/socket.io/socket.io.js"></script>
<script src="../public/js/index.js"></script>
